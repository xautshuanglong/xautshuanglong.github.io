<% if (theme.music){ %>
  <aside class="widget">
    <h3 class="widget-title">Music</h3>
    <div class="widget-content">
      <audio src=<%- '/music/'+theme.music[Math.floor(Math.random()*theme.music.length)] %> controls="controls" loop="loop" preload="auto" style="width:100%">
        您的浏览器不支持 audio 标签。
      </audio>
    </div>
  </aside>
<% } %>
